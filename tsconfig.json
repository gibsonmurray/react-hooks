{
    "compilerOptions": {
        "outDir": "./dist",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "./dist/types",
        "emitDeclarationOnly": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["index.ts", "hooks/**/*"],
    "exclude": ["node_modules", "dist"]
}
